<Window x:Class="FrostyFix5.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrostyFix5"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="FrostyFix 5: Info"
        Height="325" Width="300"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource CustomWindowStyle}">
    <Grid>
        <TabControl x:Name="Tabs" Margin="5" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Info">
                <Grid Background="#FF141414">
                    <Canvas Margin="15,10,15,242">
                        <Image VerticalAlignment="Top" Height="51" Width="229" Canvas.Left="4" Source="{StaticResource FrostyFixLogo}"/>
                        <TextBlock x:Name="VersionText" VerticalAlignment="Top" TextWrapping="NoWrap" TextAlignment="Left" FontFamily="/Fonts/GillSansNova-Bold.ttf #Gill Sans Nova" Text="v4.x.x" FontSize="11" Height="14" Width="32" Canvas.Left="218" Canvas.Top="27"/>
                    </Canvas>
                    <TextBox Name="Credits" Margin="10,70,10,0" TextWrapping="Wrap" FontFamily="/Fonts/GillSansNova-Book.ttf #Gill Sans Nova" VerticalAlignment="Top" Height="97" TextAlignment="Left" FontSize="14" Padding="10, 5" xml:space="preserve" IsReadOnly="True"
>Credits:
Dyvinia - Creator of FrostyFix 
BattleDash - Environment Variables
VictorPL - Original Script</TextBox>

                    <TextBlock Margin="10,171,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFF1F1F1" Height="20" TextAlignment="Center" FontSize="13" FontFamily="/Fonts/GillSansNova-SemiBold.ttf #Gill Sans Nova">
            GitHub: 
            <Hyperlink 
            NavigateUri="https://github.com/Dyvinia/FrostyFix"
            RequestNavigate="Hyperlink_RequestNavigate" Foreground="White" FontFamily="/Fonts/GillSansNova-Book.ttf #Gill Sans Nova">
            https://github.com/Dyvinia/FrostyFix
            </Hyperlink>
                    </TextBlock>
                    <TextBlock Margin="5,191,5,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFF1F1F1" Height="20" TextAlignment="Center" FontSize="13" FontFamily="/Fonts/GillSansNova-SemiBold.ttf #Gill Sans Nova">
            FAQ: 
            <Hyperlink 
            NavigateUri="https://github.com/Dyvinia/FrostyFix#faq"
            RequestNavigate="Hyperlink_RequestNavigate" Foreground="White" FontFamily="/Fonts/GillSansNova-Book.ttf #Gill Sans Nova">
            https://github.com/Dyvinia/FrostyFix#FAQ
            </Hyperlink>
                    </TextBlock>
                    <TextBlock Margin="5,211,5,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFF1F1F1" Height="20" TextAlignment="Center" FontSize="13" FontFamily="/Fonts/GillSansNova-SemiBold.ttf #Gill Sans Nova">
            BattlefrontModding: 
            <Hyperlink 
            NavigateUri="https://discord.gg/advqsyv"
            RequestNavigate="Hyperlink_RequestNavigate" Foreground="White" FontFamily="/Fonts/GillSansNova-Book.ttf #Gill Sans Nova">
            https://discord.gg/advqsyv
            </Hyperlink>
                    </TextBlock>
                    <TextBlock Margin="10,229,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFF1F1F1" Height="20" TextAlignment="Center" FontSize="13" FontFamily="/Fonts/GillSansNova-SemiBold.ttf #Gill Sans Nova">
            Donate: 
            <Hyperlink 
            NavigateUri="https://dyy.vin/donate"
            RequestNavigate="Hyperlink_RequestNavigate" Foreground="White" FontFamily="/Fonts/GillSansNova-Book.ttf #Gill Sans Nova">
            https://dyy.vin/Donate
            </Hyperlink>
                    </TextBlock>

                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FF141414">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10,0">
                        <Grid ToolTip="Launches game using selected Frosty Installation&#x0a;Make sure proper game is selected within Frosty">
                            <CheckBox x:Name="LaunchGameOption" IsChecked="{Binding Path=(local:Settings.LaunchGame), Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="Launch Game w/ Frosty" HorizontalAlignment="Left" Foreground="#FFF1F1F1" VerticalAlignment="Top" />
                            <Canvas Width="20" Height="20" Margin="150,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Canvas.RenderTransform>
                                    <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                                </Canvas.RenderTransform>
                                <Canvas.Resources/>
                                <Canvas Name="layer2">
                                    <Rectangle xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Canvas.Left="6.6452413" Canvas.Top="4.3774209" Width="6.3288012" Height="11.233622" Name="rect1394" Fill="#FFFFFFFF"/>
